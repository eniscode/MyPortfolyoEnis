            /* overflow: hidden !important; */
        }


.certificates-container {
    display: flex;
    flex-wrap: wrap;
    gap: 24px;
    margin-top: 24px;
    justify-content: center;
    width: 100%;
    box-sizing: border-box;
    overflow-x: hidden;
}
.certificate-card {
    width: calc(25% - 18px);
    background: #fafafa;
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(0, 0, 0, 0.10);
    padding: 16px;
    display: flex;
    flex-direction: column;
    align-items: center;
    min-width: 220px;
    box-sizing: border-box;
}
.certificate-card img {
    width: 100%;
    border-radius: 12px;
}
@@media (max-width: 1200px) {
    .certificate-card { width: calc(33.333% - 16px); }
}
@@media (max-width: 900px) {
    .certificate-card { width: calc(50% - 12px); }
}
@@media (max-width: 600px) {
    .certificate-card { width: 100%; min-width: 0; }
    .certificates-container { gap: 12px; padding: 0 4px; }
}
</style>
